<form action="?" method="get">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">{{ datasheet.title }}</h3>
            <div class="card-tools">
                {{ datasheet_pagination(datasheet) }}
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive" data-datasheet-id="{{ datasheet.id }}">
                <table class="table table-striped table-bordered table-sm">
                    <thead>
                    <tr>
                        {% for column in datasheet.columns %}
                            <th>
                                <div class="ellipsis"
                                     style="width:{{ column.width }}px;text-align: {{ column.align }};">
                                    {{ column.title }}
                                </div>
                            </th>
                        {% endfor %}
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        {% for column in datasheet.columns %}
                            <td>
                                {% if column.filterable %}
                                    <div style="width:{{ column.width }}px;text-align: {{ column.align }};">
                                        <input type="text" style="width:100%;text-align:{{ column.align }};"
                                               name="ds{{ datasheet.id }}[filter][{{ column.name }}]"
                                               value="{{ datasheet.queryParameters.filter[column.name] ?? '' }}"
                                        >
                                    </div>
                                {% endif %}
                            </td>
                        {% endfor %}
                    </tr>
                    {% for dataItem in datasheet.data.items %}
                        <tr>
                            {% for column in datasheet.columns %}
                                <td>
                                    <div class="ellipsis"
                                         style="width:{{ column.width }}px;text-align: {{ column.align }};">
                                        {{ datasheet_cell(dataItem, column) }}
                                    </div>
                                </td>
                            {% endfor %}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</form>