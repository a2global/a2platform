<form action="?" method="get">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center">
        <h1 class="h2">{{ datasheet.title }}</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group mr-2">
                {# <button type="reset" class="btn btn-sm btn-outline-secondary" onClick="this.form.reset();this.form.submit()">Show all</button> #}
                <input type="submit" value="Filter" class="btn btn-sm btn-outline-secondary">
                {# <button type="button" class="btn btn-sm btn-outline-secondary">Export</button> #}
            </div>
            {# <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle"> #}
            {# <span data-feather="calendar"></span> #}
            {# This week #}
            {# </button> #}
        </div>
    </div>

    <div class="table-responsive" data-datasheet-id="{{ datasheet.id }}">
        <table class="table table-striped table-bordered table-sm">
            <thead>
            <tr>
                {% for column in datasheet.columns %}
                    <th>
                        <div class="ellipsis" style="width:{{ column.width }}px;text-align: {{ column.align }};">
                            {{ column.title }}
                        </div>
                    </th>
                {% endfor %}
            </tr>
            </thead>
            <tbody>
            <tr>
                {% for column in datasheet.columns %}
                    <td>
                        {% if column.filterable %}
                            <div style="width:{{ column.width }}px;text-align: {{ column.align }};">
                                <input type="text" style="width:100%;text-align:{{ column.align }};"
                                       name="ds{{ datasheet.id }}[filter][{{ column.name }}]"
                                       value="{{ datasheet.queryParameters.filter[column.name] ?? '' }}"
                                >
                            </div>
                        {% endif %}
                    </td>
                {% endfor %}
            </tr>
            {% for dataItem in datasheet.data.items %}
                <tr>
                    {% for column in datasheet.columns %}
                        <td>
                            <div class="ellipsis" style="width:{{ column.width }}px;text-align: {{ column.align }};">
                                {{ datasheet_cell(dataItem, column) }}
                            </div>
                        </td>
                    {% endfor %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>


{#    {{ dump(datasheet) }}#}

</form>