                    </ul>
                    <input type="submit">
                    {% if app.environment == 'dev' %}
                        <details>
                            <summary>
                                Debug
                            </summary>
                            <hr>
                            {{ dump(datasheet) }}
                            <hr>
                            Filters:<br>
                            {% for filterForm in datasheet.filtersForm %}
                                <input type="text" name="{{ filterForm.name }}" value="{{ filterForm.value }}">
                                ({{ filterForm.name }})<br>
                            {% endfor %}
                            <hr>
                        </details>
                    {% endif %}
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive" data-datasheet-id="{{ datasheet.id }}">
                    <table class="table table-striped table-bordered table-sm">
                        <thead>
                        <tr>
                            {% for column in datasheet.columns %}
                                <th>
                                    <div class="ellipsis"
                                         style="width:{{ column.width }}px;text-align: {{ column.align }};">
                                        {{ column.title }}
                                    </div>
                                </th>
                            {% endfor %}
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            {% for column in datasheet.columns %}
                                <td>
                                    {% for filterForm in datasheet.filtersForm(column) %}
                                        <input type="text" name="{{ filterForm.name }}" value="{{ filterForm.value }}">
                                        ({{ filterForm.name }})<br>
                                    {% endfor %}
{#                                    <select data-datasheet-column-filter-selector="{{ column.name }}" class="form-control">#}
{#                                        {% for filter in datasheet_column_filters(column) %}#}
{#                                            <option value="{{ filter.name }}" {{ filter.findAppliedFilter(datasheet, column) ? 'selected' : '' }}>{{ filter.name }}</option>#}
{#                                        {% endfor %}#}
{#                                    </select>#}
{#                                    <div data-datasheet-column-filters="{{ column.name }}">#}
{#                                        {% for filter in datasheet_column_filters(column) %}#}
{#                                            <div data-datasheet-column-filter="{{ filter.name }}">#}
{#                                                {{ filter.viewControl(datasheet, column)|raw }}#}
{#                                            </div>#}
{#                                        {% endfor %}#}
{#                                    </div>#}
                                </td>
                            {% endfor %}
                        </tr>
                        {% for dataItem in datasheet.data.items %}
                            <tr>
                                {% for column in datasheet.columns %}
                                    <td>
                                        <div class="ellipsis"
                                             style="width:{{ column.width }}px;text-align: {{ column.align }};">
                                            {{ datasheet_cell(dataItem, column) }}
                                        </div>
                                    </td>
                                {% endfor %}
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </form>
</div>