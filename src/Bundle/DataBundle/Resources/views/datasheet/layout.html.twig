<h3 class="box-title">{{ datasheet.title }}</h3>

<div class="table-responsive" data-datasheet-id="">
    <table class="table table-striped table-bordered table-sm">
        <thead>
        <tr>
            {% for column in datasheet.columns %}
                <th>
                    <div data-datasheet-column-title="{{ column.name }}" class="ellipsis"
                         style="width:{{ column.width }}px;text-align: {{ column.align }};">
                        {{ column.title }}
                    </div>
                </th>
            {% endfor %}
        </tr>
        </thead>
        <tbody>
        {% for item in datasheet.data.items %}
            <tr>
                {% for column in datasheet.columns %}
                    <td>
                        {{ datasheet_cell(column, item) }}
                    </td>
                {% endfor %}
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

<hr>

