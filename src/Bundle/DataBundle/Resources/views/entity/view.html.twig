{% extends '@Admin/layout.html.twig' %}

{% block page_content %}
    <div class="box">
        {#        <div class="box-header"> #}
        {#            <a href="{{ path('admin_data_index', {entity: entityClass}) }}" #}
        {#               onClick="history.back();return false;" class="btn btn-default">&larr; {{ 'ui.back'|trans }}</a> #}
        {#            <br> #}
        {#        </div> #}
        <div class="box-header">
            <table>
                <tr>
                    <td width="200">
                        <h4 class="m-5">{{ entityName }} #{{ id }}</h4>
                    </td>
                    <td>
                        <a href="{{ path('admin_data_edit', {entity: entityClass, id: id}) }}" class="btn btn-primary"
                           data-entity-crud-edit-link="">{{ 'ui.edit'|trans }}</a>
                    </td>
                </tr>
            </table>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-6">
                    <table class="table table-bordered table-striped">
                        {% for item in data %}
                            <tr>
                                <td width="200"><b>{{ item.name }}:</b></td>
                                <td>{{ item.value }}</td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
                <div class="col-md-6">
                    {% if hasComments %}
                        {{ comment_list(object) }}
                        <br>
                        {{ comment_form(object) }}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}