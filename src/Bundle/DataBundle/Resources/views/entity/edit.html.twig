{% extends '@Admin/layout.html.twig' %}

{% block page_content %}
    {{ form_start(form) }}
    <div class="box">
        <div class="box-body">
            <table class="table table-bordered table-striped">
                {% for child in form.children %}
                    {% if child.vars.name != '_token' %}
                        <tr>
                            <td width="200"><b>{{ child.vars.name|normalize }}:</b></td>
                            <td>{{ form_widget(child) }}</td>
                        </tr>
                    {% endif %}
                {% endfor %}
                <tr>
                    <td width="200"></td>
                    <td><input type="submit" class="btn btn-primary"></td>
                </tr>
            </table>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}