<div class="card">
    <div class="card-header">
        <nav>
            <div class="nav nav-tabs card-header-tabs" id="nav-tab" role="tablist">
                {% for transition in transitions %}
                    <button class="nav-link {{ loop.first ? 'active' : '' }}"
                            id="timeline-item-tab-{{ transition.name }}"
                            data-bs-toggle="tab"
                            data-bs-target="#{{ transition.name }}"
                            type="button" role="tab"
                            aria-controls="timeline-item-{{ transition.name }}"
                            aria-selected="true">{{ transition.title|translate }}
                    </button>
                {% endfor %}
            </div>
        </nav>
    </div>
    <div>
        <div class="tab-content px-3 pt-3" id="nav-tabContent">
            {% for transition in transitions %}
                {% form_theme transition.form 'bootstrap_5_layout.html.twig' %}
                <div class="tab-pane fade {{ loop.first ? 'show active' : '' }}"
                     id="{{ transition.name }}"
                     role="tabpanel" aria-labelledby="timeline-item-tab-{{ transition.name }}"
                     tabindex="0">
                    {{ form(transition.form) }}
                </div>
            {% endfor %}
        </div>
    </div>
</div>



