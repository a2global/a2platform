<th data-datasheet-column-header="{{ column.name }}">
    {% set columnFilterForms = datasheet_column_filters_form(filterForm, datasheet, column) %}
    {% if columnFilterForms %}
        {% for columnFilterName, columnFilterForm in columnFilterForms %}
            <div data-datasheet-column-filter="{{ columnFilterName }}">
                {% for form in columnFilterForm.children %}
                    {{ form_widget(form, {'attr': {'class': 'w-100'}}) }}
                {% endfor %}
            </div>
        {% endfor %}
    {% endif %}
</th>