<th data-datasheet-column-header="{{ column.name }}"
    class="px-2 py-2"
    style="min-width:50px;width:{{ column.width }}px;white-space:nowrap;"
>
    <div data-datasheet-column-title="{{ column.name }}"
         class="ellipsis"
         style="text-align: {{ column.align }};">
        {{ column.title ?? (column.name|normalize) }}
    </div>
</th>