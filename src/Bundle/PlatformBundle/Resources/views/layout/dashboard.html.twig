<!doctype html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {% block head %}
    {% endblock %}

    {% block stylesheets %}
        <link href="{{ asset('bundles/platform/libs/a2bootstrap/bootstrap.min.css') }}"
              rel="stylesheet">

        <link href="{{ asset('bundles/platform/libs/a2bootstrap/bootstrap.customized.css') }}"
              rel="stylesheet">

        <style>
            #dashboard-main {
                scroll-behavior: smooth;
            }
        </style>
    {% endblock %}
</head>
<body class="d-flex flex-column h-100">
<header>
    <nav class="navbar navbar-expand-md fixed-top {% block header_nav_style_classes %}bg-primary navbar-dark{% endblock %}">
        <div class="container-fluid px-1">
            <a class="navbar-brand" href="#">{% block header_brand %}{% endblock %}</a>
            <button id="admin_sidebar_toggle_control" class="navbar-toggler p-2" data-bs-toggle="collapse"
                    href="#collapseExample" role="button"
                    aria-expanded="false" aria-controls="collapseExample">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" class="bi" fill="currentColor"
                     viewBox="0 0 16 16">
                    <path fill-rule="evenodd"
                          d="M2.5 11.5A.5.5 0 0 1 3 11h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4A.5.5 0 0 1 3 7h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4A.5.5 0 0 1 3 3h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"></path>
                </svg>
            </button>
        </div>
    </nav>
</header>

<div class="container-fluid pb-0 flex-grow-1 d-flex flex-column flex-sm-row overflow-auto mt-5 pt-0 px-0">
    <div class="row flex-grow-sm-1 flex-grow-0 w-100 no-gutters">
        <aside id="collapseExample"
               class="collapse col-sm-4  col-md-3 col-lg-2 d-sm-block flex-grow-sm-1 flex-shrink-1 flex-grow-0 sticky-top pb-sm-0">
            <div class="{% block sidebar_style_classes %}bg-dark{% endblock %} h-100 sticky-top">
                {% block sidebar %}
                {% endblock %}
            </div>
        </aside>
        <main class="col overflow-auto h-100 p-2" id="dashboard-main">
            {% block main_flash_messages %}
                {% for type, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ type }} mb-3" role="alert">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
            {% endblock %}
            {% block main %}
            {% endblock %}
        </main>
    </div>
</div>

{% block footer_holder %}
{#    <footer class="footer mt-auto py-2 bg-secondary text-white">#}
{#        {% block footer %}#}
{#        {% endblock %}#}
{#    </footer>#}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/platform/libs/bootstrap-5.3.0-alpha1-dist/js/bootstrap.bundle.min.js') }}"></script>
{% endblock %}

</body>
</html>
